<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite thread-count="2" name="CrossBrowserSuite" parallel="none">

    <test name="ChromeTests">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="com.skyrexio.tests.LoginTest" />
            <class name="com.skyrexio.tests.ProductsTest" />
            <class name="com.skyrexio.tests.CartTest" />
        </classes>
    </test>

    <test name="FirefoxTests">
        <parameter name="browser" value="firefox" />
        <classes>
            <class name="com.skyrexio.tests.LoginTest" />
            <class name="com.skyrexio.tests.ProductsTest" />
            <class name="com.skyrexio.tests.CartTest" />
        </classes>
    </test>
</suite>